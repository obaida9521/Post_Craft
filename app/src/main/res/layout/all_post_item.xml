<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/card"
    android:backgroundTint="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_background"
                android:src="@drawable/material_design_default"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/text_caption"
                android:layout_alignLeft="@id/image_background"
                android:layout_alignRight="@id/image_background"
                android:layout_alignBottom="@+id/image_background"
                android:layout_alignTop="@+id/image_background"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/copy_text"
                android:src="@drawable/copy_24"
                android:background="@drawable/shape2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:tint="@color/white"
                android:padding="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/edit"
                android:src="@drawable/edit_24"
                android:background="@drawable/shape2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:tint="@color/white"
                android:padding="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#43000000"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="8dp"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/fav"
                android:src="@drawable/favorite_border_24"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:tint="@color/darkBlue" />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/download"
                android:src="@drawable/download_24"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:tint="@color/darkBlue"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/share"
                android:src="@drawable/share"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true"
                app:tint="@color/darkBlue"
                android:foreground="?attr/selectableItemBackground"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>