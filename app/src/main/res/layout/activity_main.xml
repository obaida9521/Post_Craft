<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawerLay"
    tools:context=".activities.MainActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="10dp"
            >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:title="@string/app_name"
                app:titleTextColor="@color/darkBlue"
                app:titleCentered="true"
                app:navigationIcon="@drawable/density_24"
                app:navigationIconTint="@color/darkBlue"
                app:titleTextAppearance="@style/toolbarFont"
                />


        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame"
                android:layout_above="@+id/bottom_bar"
                android:background="@color/background"
                />
            <nl.joery.animatedbottombar.AnimatedBottomBar
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:abb_indicatorAppearance="round"
                app:abb_indicatorHeight="5dp"
                app:abb_indicatorMargin="20dp"
                app:abb_indicatorColor="@color/brightBlue"
                app:abb_selectedIndex="0"
                app:abb_rippleEnabled="false"
                app:abb_iconSize="30dp"
                app:abb_tabColor="@color/darkBlue"
                app:abb_selectedTabType="text"
                app:abb_tabColorSelected="@color/brightBlue"
                android:layout_alignParentBottom="true"
                app:abb_tabs="@menu/bottom_bar_menu"
                app:abb_badgeTextColor="@color/white"
                android:elevation="8dp"
                />
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/selected"
        app:itemTextColor="@color/selected"
        app:itemTextAppearance="@style/NavigationViewStyle"
        app:headerLayout="@layout/header"
        android:background="#A4000000"
        app:itemRippleColor="@color/selected"
        />
</androidx.drawerlayout.widget.DrawerLayout>